        <Label Content="Path&#xD;&#xA;" Name ="type" HorizontalAlignment="Left" Margin="159,73.4,0,0" VerticalAlignment="Top" Width="202" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox  Name ="name" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="104,273,0,0"/>
        <Label Content="Name: " HorizontalAlignment="Left" Margin="51,270,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
