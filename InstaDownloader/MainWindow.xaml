        <TextBox HorizontalAlignment="Left" Height="29" Margin="51,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="366" RenderTransformOrigin="0.389,0.416" Name="url" Grid.ColumnSpan="2"/>
